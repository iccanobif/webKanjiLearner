{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch npm test",
            "program": "${workspaceFolder}/backend/node_modules/mocha/bin/mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/backend/test"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch npm start",
            "program": "${workspaceFolder}/backend/backend.js",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}