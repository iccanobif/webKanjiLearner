<h1><%=character%></h1>

<% if (sentences.length == 0) { %>
nothing to see here....
<% } else { %>
<h2>Readings:</h2>
<%= readings.join(" / ") %><br />

<h2>Example words:</h2>

<%- exampleWords
    .map((x) => {
        return "<a href='#kanjiDetail_word'>word（readings）</a>(count)"
                .replace(/word/g, x.word)
                .replace(/count/g, x.count)
                .replace(/readings/g, x.readings.join("／"))
    })
    .join("<br/>") 
%><br />

<h2>Meanings:</h2>
<%= meanings.join(" / ") %><br />

<% if (jigen != undefined) { %>
    <h2>「<%=character%>」の字源:</h2>
    <%-  include("sentence.ejs", {jpn: jigen, 
                                  eng: null, 
                                  character: undefined,
                                  sentenceSplitter: sentenceSplitter, 
                                  edict: edict}) %>
<% } %>

<h2>Sentences:</h2>

<% sentences.forEach((sentence) => { %>
<div class="sentenceBlock">
    <%-  include("sentence.ejs", {jpn: sentence.jpn,
                                  eng: sentence.eng,
                                  character: character,
                                  sentenceSplitter: sentenceSplitter,
                                  edict: edict}) %>
</div>
<% }); } %>