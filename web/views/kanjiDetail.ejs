<a id="closePopupButton" href="#" onClick="hideCharacterDetails(); return false">X</a>

<h1><%=character%></h1>
<h2>Readings:</h2>
<%= readings.join(" / ") %><br />

<h2>Meanings:</h2>
<%= meanings.join(" / ") %><br />
<h2>Sentences:</h2>

<% if (sentences.length == 0) { %>
nothing to see here....
<% } %>

<% sentences.forEach((sentence) => { %>
<div class="sentenceBlock">
    <div class="jpn"><%= sentence.jpn %></div>
    <div class="kana"><%= sentence.kana %></div>
    <div class="eng"><%= sentence.eng %></div>
</div>
<% }); %>